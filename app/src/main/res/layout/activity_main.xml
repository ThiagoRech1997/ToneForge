<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToneForge"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Inicializando..."
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Controles de Áudio -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/dark_gray"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎵 Controles de Áudio"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_start_audio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="▶️ Iniciar Áudio"
                    android:textSize="16sp"
                    android:background="@drawable/button_background"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_stop_audio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⏹️ Parar Áudio"
                    android:textSize="16sp"
                    android:background="@drawable/button_background"
                    android:textColor="@color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Efeito: Ganho -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/dark_gray"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔊 Ganho"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seekbar_gain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="200"
                    android:progress="100"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_gain_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ganho: 1.0x"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Efeito: Distorção -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/dark_gray"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎸 Distorção"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/seekbar_distortion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_distortion_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distorção: 0%"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Efeito: Delay -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/dark_gray"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⏱️ Delay"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tempo (ms):"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:layout_marginBottom="4dp" />

                <SeekBar
                    android:id="@+id/seekbar_delay_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="1000"
                    android:progress="0"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_delay_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tempo: 0ms"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback:"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:layout_marginBottom="4dp" />

                <SeekBar
                    android:id="@+id/seekbar_delay_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_delay_feedback_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback: 0%"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Efeito: Reverb -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/dark_gray"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏛️ Reverb"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tamanho da Sala:"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:layout_marginBottom="4dp" />

                <SeekBar
                    android:id="@+id/seekbar_reverb_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_reverb_room_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tamanho: 0%"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amortecimento:"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:layout_marginBottom="4dp" />

                <SeekBar
                    android:id="@+id/seekbar_reverb_damping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_reverb_damping_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amortecimento: 0%"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>