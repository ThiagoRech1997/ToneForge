<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToneForge"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"/>

        <!-- Knobs e ícones dos efeitos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <!-- Ganho -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_volume_up"
                    android:tint="@color/accent_blue"
                    android:contentDescription="@string/desc_gain"/>
                <SeekBar
                    android:id="@+id/seekbar_gain"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:max="200"
                    android:progress="100"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/text_gain_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ganho: 1.0x"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Distorção -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_graphic_eq"
                    android:tint="@color/accent_orange"
                    android:contentDescription="@string/desc_distortion"/>
                <SeekBar
                    android:id="@+id/seekbar_distortion"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/text_distortion_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distorção: 0%"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Delay -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_av_timer"
                    android:tint="@color/accent_green"
                    android:contentDescription="@string/desc_delay"/>
                <SeekBar
                    android:id="@+id/seekbar_delay_time"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:max="1000"
                    android:progress="0"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/text_delay_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tempo: 0ms"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Reverb -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_waves"
                    android:tint="@color/accent_red"
                    android:contentDescription="@string/desc_reverb"/>
                <SeekBar
                    android:id="@+id/seekbar_reverb_room"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/text_reverb_room_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tamanho: 0%"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Botões grandes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_start_audio"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/round_button"
                android:text="▶"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:elevation="8dp"
                android:layout_margin="16dp"/>

            <Button
                android:id="@+id/btn_stop_audio"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/round_button"
                android:text="⏹"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:elevation="8dp"
                android:layout_margin="16dp"/>
        </LinearLayout>

        <!-- Status -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pronto"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>