<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lava_dark_bg">

    <!-- Header com Navegação -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:elevation="4dp"
        android:minHeight="56dp">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_home"
            android:tint="@color/lava_text_primary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Home"/>

        <ImageButton
            android:id="@+id/btnPedalboard"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_graphic_eq"
            android:tint="@color/lava_purple"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Pedaleira"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ToneForge"
            android:textColor="@color/lava_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/btnWifi"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_wifi"
            android:tint="@color/lava_text_primary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Wi-Fi"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btnVolume"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_volume_up"
            android:tint="@color/lava_text_primary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Volume"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btnPower"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_power"
            android:tint="@color/lava_text_primary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Power"/>
    </LinearLayout>

    <!-- Container Principal -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>