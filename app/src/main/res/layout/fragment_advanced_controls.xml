<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/advanced_controls_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/advancedHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/advanced_header_gradient"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBackToSimple"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="#FFFFFF"
            android:background="@drawable/circle_button_background"
            android:padding="6dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="⚙️ Controles Avançados"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/btnSaveAdvanced"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_save"
            android:tint="#FFFFFF"
            android:background="@drawable/circle_button_background"
            android:padding="6dp" />
    </LinearLayout>

    <!-- Área de controles com scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/advancedHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Seção Reverb -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#1E1E1E"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header do efeito -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Reverb"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sistema pronto"
                            android:textColor="#00FF88"
                            android:textSize="12sp"
                            android:drawableStart="@drawable/ic_check_circle"
                            android:drawablePadding="4dp"
                            android:gravity="center_vertical" />

                        <Switch
                            android:id="@+id/switchReverb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:layout_marginStart="12dp"
                            android:thumb="@drawable/modern_switch_thumb"
                            android:track="@drawable/modern_switch_track" />
                    </LinearLayout>

                    <!-- Controle Ganho -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_volume_up"
                            android:tint="#00FF88" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Ganho"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp" />

                        <Button
                            android:id="@+id/btnResetGanho"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:text="RESET"
                            android:textSize="8sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/reset_button_background"
                            android:layout_marginStart="8dp" />

                        <SeekBar
                            android:id="@+id/seekBarGanho"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="50"
                            android:progressTint="#00FF88"
                            android:thumbTint="#00FF88"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/valueGanho"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Controle Distorção -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_waves"
                            android:tint="#00FF88" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Distorção"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp" />

                        <Button
                            android:id="@+id/btnResetDistortion"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:text="RESET"
                            android:textSize="8sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/reset_button_background"
                            android:layout_marginStart="8dp" />

                        <SeekBar
                            android:id="@+id/seekBarDistortion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="0"
                            android:progressTint="#00FF88"
                            android:thumbTint="#00FF88"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/valueDistortion"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Tipo de Distorção -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Distorção"
                            android:textColor="#80FFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Soft Clip"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:gravity="end"
                            android:layout_marginEnd="8dp" />
                    </LinearLayout>

                    <!-- Mix Distorção -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Mix Distorção (Dry/Wet)"
                            android:textColor="#80FFFFFF"
                            android:textSize="12sp" />

                        <SeekBar
                            android:id="@+id/seekBarMixDistortion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="100"
                            android:progressTint="#00FF88"
                            android:thumbTint="#00FF88"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/valueMixDistortion"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Seção Delay -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#1E1E1E"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header Delay -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delay"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Switch
                            android:id="@+id/switchDelay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:thumb="@drawable/modern_switch_thumb"
                            android:track="@drawable/modern_switch_track" />
                    </LinearLayout>

                    <!-- Tempo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Tempo (ms)"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <SeekBar
                            android:id="@+id/seekBarDelayTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="2000"
                            android:progress="500"
                            android:progressTint="#00FF88"
                            android:thumbTint="#00FF88"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/valueDelayTime"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="500ms"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Sincronizar BPM -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sincronizar BPM"
                            android:textColor="#80FFFFFF"
                            android:textSize="14sp" />

                        <Switch
                            android:id="@+id/switchSyncBPM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:thumb="@drawable/modern_switch_thumb"
                            android:track="@drawable/modern_switch_track" />
                    </LinearLayout>

                    <!-- BPM -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="BPM"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <SeekBar
                            android:id="@+id/seekBarBPM"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:min="60"
                            android:max="200"
                            android:progress="120"
                            android:progressTint="#00FF88"
                            android:thumbTint="#00FF88"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/valueBPM"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="120"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Feedback -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Feedback do Delay"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <SeekBar
                            android:id="@+id/seekBarDelayFeedback"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="95"
                            android:progress="30"
                            android:progressTint="#00FF88"
                            android:thumbTint="#00FF88"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/valueDelayFeedback"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="30%"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Mix Delay -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Mix Delay (Dry/Wet)"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <SeekBar
                            android:id="@+id/seekBarDelayMix"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="40"
                            android:progressTint="#00FF88"
                            android:thumbTint="#00FF88"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/valueDelayMix"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="40%"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout> 