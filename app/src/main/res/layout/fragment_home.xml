<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lava_dark_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <GridLayout
            android:id="@+id/gridMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <!-- Afinador -->
            <LinearLayout
                android:id="@+id/btnTuner"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/round_button_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="4dp"
                android:padding="12dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_target"
                    android:tint="@color/lava_blue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Afinador"
                    android:textColor="@color/lava_text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Efeitos -->
            <LinearLayout
                android:id="@+id/btnEffects"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/round_button_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="4dp"
                android:padding="12dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_graphic_eq"
                    android:tint="@color/lava_purple"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Efeitos"
                    android:textColor="@color/lava_text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Looper -->
            <LinearLayout
                android:id="@+id/btnLooper"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/round_button_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="4dp"
                android:padding="12dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_rotate_left"
                    android:tint="@color/lava_green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Looper"
                    android:textColor="@color/lava_text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Metrônomo -->
            <LinearLayout
                android:id="@+id/btnMetronome"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/round_button_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="4dp"
                android:padding="12dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_av_timer"
                    android:tint="@color/lava_red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metrônomo"
                    android:textColor="@color/lava_text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Aprendizado -->
            <LinearLayout
                android:id="@+id/btnLearning"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/round_button_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="4dp"
                android:padding="12dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_book"
                    android:tint="@color/lava_orange"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aprender"
                    android:textColor="@color/lava_text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Gravador -->
            <LinearLayout
                android:id="@+id/btnRecorder"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/round_button_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="4dp"
                android:padding="12dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_mic"
                    android:tint="@color/lava_pink"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gravar"
                    android:textColor="@color/lava_text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Configurações -->
            <LinearLayout
                android:id="@+id/btnSettings"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/round_button_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="4dp"
                android:padding="12dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_settings"
                    android:tint="@color/lava_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Config"
                    android:textColor="@color/lava_text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Wi-Fi -->
            <LinearLayout
                android:id="@+id/btnWifi"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/round_button_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="4dp"
                android:padding="12dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_wifi"
                    android:tint="@color/lava_cyan"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wi-Fi"
                    android:textColor="@color/lava_text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Volume -->
            <LinearLayout
                android:id="@+id/btnVolume"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/round_button_background"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="4dp"
                android:padding="12dp">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_volume_up"
                    android:tint="@color/lava_yellow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volume"
                    android:textColor="@color/lava_text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView> 