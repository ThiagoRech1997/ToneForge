<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToneForge"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <GridLayout
            android:id="@+id/gridMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <!-- Afinador -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/btnTuner"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_target"
                    android:tint="@color/accent_blue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Afinador"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Efeitos -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/btnEffects"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_graphic_eq"
                    android:tint="@color/accent_orange"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Efeitos"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Looper -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/btnLooper"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_rotate_left"
                    android:tint="@color/accent_green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Looper"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Metrônomo -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/btnMetronome"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_av_timer"
                    android:tint="@color/accent_red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metrônomo"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Aprendizado -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/btnLearning"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_book"
                    android:tint="@color/accent_blue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aprender"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Gravador -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/btnRecorder"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_mic"
                    android:tint="@color/accent_orange"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gravar"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Configurações -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/btnSettings"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_settings"
                    android:tint="@color/accent_green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Config"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView> 