<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Efeitos"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>
            
        <!-- Botão Reset All -->
        <Button
            android:id="@+id/btnResetAll"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/reset_all"
            android:textSize="16sp"
            android:background="@drawable/reset_button_background"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"/>

        <!-- Botões de Exportar/Importar Presets -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            
            <Button
                android:id="@+id/btnExportPreset"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/export_preset"
                android:textSize="14sp"
                android:background="@drawable/reset_button_background"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"/>
                
            <Button
                android:id="@+id/btnImportPreset"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/import_preset"
                android:textSize="14sp"
                android:background="@drawable/reset_button_background"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Presets de Efeitos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">
            <EditText
                android:id="@+id/presetNameEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Nome do preset"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:inputType="textPersonName"/>
            <Button
                android:id="@+id/savePresetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salvar"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">
            <Spinner
                android:id="@+id/presetSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:spinnerMode="dropdown"
                android:background="@android:color/transparent"
                android:popupBackground="@color/black"
                android:dropDownVerticalOffset="8dp"/>
            <Button
                android:id="@+id/deletePresetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excluir"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Ordem dos Efeitos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordem dos Efeitos"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/effectsOrderRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginBottom="20dp"/>

        <!-- Status do Pipeline -->
        <TextView
            android:id="@+id/effectsStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciando pipeline de áudio..."
            android:textSize="14sp"
            android:textColor="@color/green"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:padding="8dp"/>

        <!-- Ganho -->
        <LinearLayout
            android:id="@+id/gainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/effect_enabled_bg"
            android:padding="8dp"
            android:layout_marginBottom="16dp">
            <ImageView
                android:id="@+id/gainIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/effect_indicator_enabled"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ganho"
                android:textColor="@color/effect_enabled"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnResetGain"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/reset"
                android:textSize="12sp"
                android:background="@drawable/reset_button_background"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"/>
            <Switch
                android:id="@+id/switchGain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text=""/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekGain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="16dp"/>

        <!-- Distorção -->
        <LinearLayout
            android:id="@+id/distortionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/effect_enabled_bg"
            android:padding="8dp"
            android:layout_marginBottom="16dp">
            <ImageView
                android:id="@+id/distortionIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/effect_indicator_enabled"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Distorção"
                android:textColor="@color/effect_enabled"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnResetDistortion"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/reset"
                android:textSize="12sp"
                android:background="@drawable/reset_button_background"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"/>
            <Switch
                android:id="@+id/switchDistortion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text=""/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekDistortion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="30"
            android:layout_marginBottom="16dp"/>

        <!-- Tipo de Distorção -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tipo de Distorção"
                android:textColor="@color/white"
                android:textSize="14sp"/>
            <Spinner
                android:id="@+id/spinnerDistortionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/distortion_types"
                android:background="@android:color/transparent"
                android:popupBackground="@color/black"/>
        </LinearLayout>
        <!-- Mix Dry/Wet Distorção -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mix Distorção (Dry/Wet)"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekDistortionMix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="100"
            android:layout_marginBottom="16dp"/>

        <!-- Delay -->
        <LinearLayout
            android:id="@+id/delayContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/effect_enabled_bg"
            android:padding="8dp"
            android:layout_marginBottom="16dp">
            <ImageView
                android:id="@+id/delayIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/effect_indicator_enabled"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delay"
                android:textColor="@color/effect_enabled"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnResetDelay"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/reset"
                android:textSize="12sp"
                android:background="@drawable/reset_button_background"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"/>
            <Switch
                android:id="@+id/switchDelay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text=""/>
        </LinearLayout>
        
        <!-- Tempo do Delay em ms -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/delay_time"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekDelayTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:progress="200"
            android:layout_marginBottom="8dp"/>
            
        <!-- Sincronização BPM -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/delay_sync_bpm"
                android:textColor="@color/white"
                android:textSize="14sp"/>
            <Switch
                android:id="@+id/switchDelaySyncBPM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text=""/>
        </LinearLayout>
        
        <!-- BPM do Delay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/delay_bpm"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekDelayBPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="200"
            android:progress="120"
            android:layout_marginBottom="8dp"/>
            
        <!-- Feedback do Delay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Feedback do Delay"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekDelayFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="8dp"/>
        <!-- Mix Dry/Wet Delay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mix Delay (Dry/Wet)"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekDelayMix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="100"
            android:layout_marginBottom="16dp"/>

        <!-- Reverb -->
        <LinearLayout
            android:id="@+id/reverbContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/effect_enabled_bg"
            android:padding="8dp"
            android:layout_marginBottom="16dp">
            <ImageView
                android:id="@+id/reverbIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/effect_indicator_enabled"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reverb"
                android:textColor="@color/effect_enabled"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnResetReverb"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/reset"
                android:textSize="12sp"
                android:background="@drawable/reset_button_background"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"/>
            <Switch
                android:id="@+id/switchReverb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text=""/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekReverb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="40"
            android:layout_marginBottom="8dp"/>
        <!-- Room Size do Reverb -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Room Size do Reverb"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekReverbRoomSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="8dp"/>
        <!-- Damping do Reverb -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Damping do Reverb"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekReverbDamping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="32dp"/>
        <!-- Tipo de Reverb -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/reverb_type"
                android:textColor="@color/white"
                android:textSize="14sp"/>
            <Spinner
                android:id="@+id/spinnerReverbType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/reverb_types"
                android:background="@android:color/transparent"
                android:popupBackground="@color/black"/>
        </LinearLayout>
        <!-- Mix Dry/Wet Reverb -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/reverb_mix"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekReverbMix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="100"
            android:layout_marginBottom="16dp"/>

        <!-- Chorus -->
        <LinearLayout
            android:id="@+id/chorusContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/effect_disabled_bg"
            android:padding="8dp"
            android:layout_marginBottom="16dp">
            <ImageView
                android:id="@+id/chorusIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/effect_indicator_disabled"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chorus"
                android:textColor="@color/effect_disabled"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnResetChorus"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/reset"
                android:textSize="12sp"
                android:background="@drawable/reset_button_background"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"/>
            <Switch
                android:id="@+id/switchChorus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Depth (ms)"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekChorusDepth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="20"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rate (Hz)"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekChorusRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="10"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mix Chorus (Dry/Wet)"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekChorusMix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="16dp"/>

        <!-- Flanger -->
        <LinearLayout
            android:id="@+id/flangerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/effect_disabled_bg"
            android:padding="8dp"
            android:layout_marginBottom="16dp">
            <ImageView
                android:id="@+id/flangerIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/effect_indicator_disabled"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Flanger"
                android:textColor="@color/effect_disabled"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnResetFlanger"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/reset"
                android:textSize="12sp"
                android:background="@drawable/reset_button_background"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"/>
            <Switch
                android:id="@+id/switchFlanger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Depth (ms)"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekFlangerDepth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="3"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rate (Hz)"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
        <SeekBar
            android:id="@+id/seekFlangerRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="3"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
