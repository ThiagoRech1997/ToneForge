<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lava_dark_bg"
    android:gravity="center"
    android:padding="24dp">

    <!-- Nota Principal -->
    <TextView
        android:id="@+id/tunerNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E"
        android:textSize="72sp"
        android:textStyle="bold"
        android:textColor="@color/lava_blue"
        android:layout_marginBottom="24dp"/>

    <!-- Barra de Progresso com Gradiente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@drawable/tuner_progress_gradient"
        android:layout_marginBottom="16dp"/>

    <!-- Informações de Frequência e Cents -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tunerFreq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequência: 329.6 Hz"
            android:textSize="14sp"
            android:textColor="@color/lava_text_secondary"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tunerCents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2 cents"
            android:textSize="16sp"
            android:textColor="@color/lava_green"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Botões de Notas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnNoteE"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="E"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/round_button_background"
            android:textColor="@color/lava_text_primary"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btnNoteA"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="A"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/round_button_background"
            android:textColor="@color/lava_text_primary"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btnNoteD"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="D"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/round_button_background"
            android:textColor="@color/lava_text_primary"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btnNoteG"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="G"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/round_button_background"
            android:textColor="@color/lava_text_primary"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btnNoteB"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="B"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/round_button_background"
            android:textColor="@color/lava_text_primary"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/btnNoteE2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="E"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/round_button_background"
            android:textColor="@color/lava_text_primary"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <!-- Botão de Controle -->
    <Button
        android:id="@+id/tunerToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        android:textAllCaps="false"
        android:background="@drawable/round_button_background"
        android:textColor="@color/lava_text_primary"
        android:padding="16dp"
        android:layout_marginTop="32dp"/>

</LinearLayout> 