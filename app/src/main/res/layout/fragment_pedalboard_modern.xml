<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pedalboard_modern_background">

    <!-- Header moderno -->
    <LinearLayout
        android:id="@+id/modernHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/modern_header_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŽ¸ Minha Pedaleira"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_settings"
                android:tint="#FFFFFF"
                android:alpha="0.8"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/btnFullscreen"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_fullscreen"
                android:tint="#FFFFFF"
                android:alpha="0.8" />
        </LinearLayout>

        <!-- Controles principais -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnResetAll"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#33FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ðŸ”„ RESET"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="center" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnSavePreset"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#33FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ðŸ’¾ SALVAR"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="center" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnLoadPreset"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#33FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ðŸ“‚ CARREGAR"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="center" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Status pipeline -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:background="@drawable/status_pill_background"
            android:gravity="center_vertical">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/status_led_active"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/pipelineStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pipeline Ativo - Processando em Tempo Real"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/performanceInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPU: 25% | 4ms"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:alpha="0.8" />
        </LinearLayout>
    </LinearLayout>

    <!-- Grid de pedais moderno -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/modernHeader"
        app:layout_constraintBottom_toTopOf="@id/modernFooter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- InstruÃ§Ã£o -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toque em um pedal para editar â€¢ Arraste para reordenar"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:drawableStart="@drawable/ic_touch_hint"
                android:drawablePadding="8dp" />

            <!-- RecyclerView dos pedais -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/modernPedalboardGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:paddingBottom="16dp" />

            <!-- Cadeia de sinal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”— Cadeia de Sinal"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/modernSignalChain"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="@drawable/signal_chain_background"
                    android:gravity="center_vertical" />
            </HorizontalScrollView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Footer moderno -->
    <LinearLayout
        android:id="@+id/modernFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/modern_footer_gradient"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ToneForge Pedalboard"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currentPreset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preset: Rock Lead"
                android:textColor="#80FFFFFF"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_pedals_active"
                android:tint="#00FF88"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/activePedalsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 ativos"
                android:textColor="#00FF88"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout> 