<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToneForge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lava_blue</item>
        <item name="colorPrimaryVariant">@color/lava_purple</item>
        <item name="colorOnPrimary">@color/lava_text_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lava_green</item>
        <item name="colorSecondaryVariant">@color/lava_orange</item>
        <item name="colorOnSecondary">@color/lava_text_primary</item>
        <!-- Background colors. -->
        <item name="android:colorBackground">@color/lava_dark_bg</item>
        <item name="colorSurface">@color/lava_card_bg</item>
        <item name="colorOnSurface">@color/lava_text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/lava_status_bg</item>
        <item name="android:navigationBarColor">@color/lava_dark_bg</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>
</resources>