<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToneForge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lava_blue</item>
        <item name="colorPrimaryVariant">@color/lava_purple</item>
        <item name="colorOnPrimary">@color/lava_text_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lava_green</item>
        <item name="colorSecondaryVariant">@color/lava_orange</item>
        <item name="colorOnSecondary">@color/lava_text_primary</item>
        <!-- Background colors. -->
        <item name="android:colorBackground">@color/lava_dark_bg</item>
        <item name="colorSurface">@color/lava_card_bg</item>
        <item name="colorOnSurface">@color/lava_text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/lava_status_bg</item>
        <item name="android:navigationBarColor">@color/lava_dark_bg</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Integração orgânica com o sistema -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>
    
    <!-- Estilo para botões modernos -->
    <style name="LavaButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/round_button_background</item>
        <item name="android:textColor">@color/lava_text_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="rippleColor">@color/lava_text_secondary</item>
    </style>
    
    <!-- Estilo para progress bars modernas -->
    <style name="LavaProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/modern_progress_bar</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>
</resources>